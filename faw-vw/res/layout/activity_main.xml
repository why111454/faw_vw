<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <FrameLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/logo_both_h" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="14dp"
                    android:src="@drawable/logo_vw_topbar" />
            </FrameLayout>

            <View style="@style/divHorizontal" />

            <FrameLayout
                android:id="@+id/contain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/bottom_bar_home"
                    style="@style/BottomBarBtn"
                    android:drawableTop="@drawable/bottom_bar_ic_home"
                    android:text="首页" />

                <View style="@style/divVerticalDark" />

                <RadioButton
                    android:id="@+id/bottom_bar_show_cars"
                    style="@style/BottomBarBtn"
                    android:drawableTop="@drawable/bottom_bar_ic_show_cars"
                    android:text="产品展示" />

                <View style="@style/divVerticalDark" />

                <RadioButton
                    android:id="@+id/bottom_bar_find_cars"
                    style="@style/BottomBarBtn"
                    android:drawableTop="@drawable/bottom_bar_ic_find_cars"
                    android:text="寻车助手" />

                <View style="@style/divVerticalDark" />

                <RadioButton
                    android:id="@+id/bottom_bar_brand"
                    style="@style/BottomBarBtn"
                    android:drawableTop="@drawable/bottom_bar_ic_brand"
                    android:text="了解品牌" />

                <View style="@style/divVerticalDark" />

                <RadioButton
                    android:id="@+id/bottom_bar_more"
                    style="@style/BottomBarBtn"
                    android:drawableTop="@drawable/bottom_bar_ic_more"
                    android:text="更多" />
            </RadioGroup>
        </LinearLayout>

        <ImageView
            android:id="@+id/main_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"/>
        <com.fax.utils.bitmap.RecycleImageView
            android:contentDescription="显示模糊效果用"
            android:id="@android:id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#dd272727"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <TextView
			        android:id="@+id/main_menu_btn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:background="@android:color/white"
                android:drawableRight="@drawable/main_menu_ic_search"
                android:layout_margin="20dp"
                android:gravity="left|center_vertical"/>
            
	            <Button
			        android:id="@+id/main_menu_btn_person"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="20dp"
	                android:background="@drawable/common_btn_in_black"
	                android:drawableLeft="@drawable/main_menu_ic_person"
	                android:drawableRight="@drawable/main_menu_ic_wait"
	                android:paddingRight="10dp"
	                android:drawablePadding="12dp"
	                android:gravity="left|center_vertical"
	                android:minHeight="40dp"
	                android:text="个人中心"
	                android:textColor="@android:color/white" />

            <View style="@style/divHorizontal" />

            <Button
			        android:id="@+id/main_menu_btn_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:background="@drawable/common_btn_in_black"
                android:drawableLeft="@drawable/main_menu_ic_order_drive"
                android:drawablePadding="12dp"
                android:gravity="left|center_vertical"
                android:minHeight="40dp"
                android:text="预约试驾"
                android:textColor="@android:color/white" />

            <View style="@style/divHorizontal" />

            <Button
			        android:id="@+id/main_menu_btn_buy_userd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:background="@drawable/common_btn_in_black"
                android:drawableLeft="@drawable/main_menu_ic_buy_used"
	                android:drawableRight="@drawable/main_menu_ic_wait"
	                android:paddingRight="10dp"
                android:drawablePadding="12dp"
                android:gravity="left|center_vertical"
                android:minHeight="40dp"
                android:text="二手车购买"
                android:textColor="@android:color/white" />

            <View style="@style/divHorizontal" />

            <Button
			        android:id="@+id/main_menu_btn_query_illegal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:background="@drawable/common_btn_in_black"
                android:drawableLeft="@drawable/main_menu_ic_query_illegal"
	                android:drawableRight="@drawable/main_menu_ic_wait"
	                android:paddingRight="10dp"
                android:drawablePadding="12dp"
                android:gravity="left|center_vertical"
                android:minHeight="40dp"
                android:text="违章查询"
                android:textColor="@android:color/white" />

            <View style="@style/divHorizontal" />

            <Button
			        android:id="@+id/main_menu_btn_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:background="@drawable/common_btn_in_black"
                android:drawableLeft="@drawable/main_menu_ic_feedback"
                android:drawablePadding="12dp"
                android:gravity="left|center_vertical"
                android:minHeight="40dp"
                android:text="意见反馈"
                android:textColor="@android:color/white" />

            <View style="@style/divHorizontal" />

            <Button
			        android:id="@+id/main_menu_btn_online_qa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:background="@drawable/common_btn_in_black"
                android:drawableLeft="@drawable/main_menu_ic_online_qa"
                android:drawablePadding="12dp"
                android:gravity="left|center_vertical"
                android:minHeight="40dp"
                android:text="在线问答"
                android:textColor="@android:color/white" />

            <View
                style="@style/divHorizontal" 
                android:layout_height="3dp"/>

            <Button
			        android:id="@+id/main_menu_btn_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:background="@drawable/common_btn_in_black"
                android:drawableLeft="@drawable/main_menu_ic_2wei"
                android:drawablePadding="12dp"
                android:gravity="left|center_vertical"
                android:minHeight="40dp"
                android:text="扫描二维码"
                android:textColor="@android:color/white" />

            <View style="@style/divHorizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="一汽大众客户关怀热线"
                android:textColor="@android:color/darker_gray" />

            <Button
			        android:id="@+id/main_menu_btn_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="36dp"
                android:text="4008-171-888"
                android:background="@drawable/common_btn_in_black"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_btn_in_black"
                    android:padding="10dp"
                    android:src="@drawable/main_menu_ic_weichat" />

                <View
                    style="@style/divVertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_btn_in_black"
                    android:padding="10dp"
                    android:src="@drawable/main_menu_ic_weibo" />

                <View
                    style="@style/divVertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_btn_in_black"
                    android:padding="10dp"
                    android:src="@drawable/main_menu_ic_weibo_tx" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout><!-- </android.support.v4.widget.DrawerLayout> -->
